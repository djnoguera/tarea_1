<div class='row container-fluid'>
  <div class='col-md-6'>
    <div class='list-group list-group-flush'>
      <a href='/films' class='list-group-item'><h2>Films</h2></a>
      <% if !@character['films'].empty? %>
      <% @films.each do |film| %>
      <% id = film['url'].split('/')[5] %>
      <p><%= film['title'] %> <%= link_to 'Show', film_url(id) %></p>
      <%end%>
      <% else %>
      <a  class="list-group-item">No Films</a>
      <% end %>
    </div>
  </div>
  <div class='col-md-6'>
    <div class='list-group list-group-flush'>
      <a href='/starships' class='list-group-item'><h2>Starships</h2></a>
      <% if !@character['starships'].empty? %>
      <% @starships.each do |starship| %>
      <% id = starship['url'].split('/')[5] %>
      <p><%= starship['name'] %> <%= link_to 'Show', starship_url(id) %></p>
      <%end%>
      <% else %>
      <a  class="list-group-item">No Starships</a>
      <% end %>
    </div>
  </div>
</div>

