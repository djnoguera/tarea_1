    <tr>
      <th>Name:</th>
      <td><%=@character['name']%></td>
    </tr>
    <tr>
      <th>Hight:</th>
      <td><%=@character['height']%></td>
    </tr>
    <tr>
      <th>Mass:</th>
      <td><%= @character['mass'] %>kg</td>
    </tr>
    <tr>
      <th>Hair Color:</th>
      <td><%=@character['hair_color']%></td>
    </tr>
     <tr>
      <th>Skin Color:</th>
      <td><%=@character['skin_color']%></td>
    </tr>
     <tr>
      <th>Eye Color:</th>
      <td><%=@character['eye_color']%></td>
    </tr>
  </table>
