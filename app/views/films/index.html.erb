<p id="notice"><%= notice %></p>

<h1>Films</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Release date</th>
      <th>Director</th>
      <th>Producer</th>
      <th>Episode</th>
      

      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @films.each do |film| %>
      <% id = film['url'].split('/')[5] %>
    
      <tr>
        <td><%= film['title'] %></td>
        <td><%= film['release_date'] %></td>
        <td><%= film['director'] %></td>
        <td><%= film['producer'] %></td>
        <td><%= film['episode_id'] %></td>
        <td><%= link_to 'Show', film_url(id) %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

