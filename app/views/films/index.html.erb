  <tbody>
    <% @films.each do |film| %>
      <% id = film['url'].split('/')[5] %>
    
      <tr class='clickable-row' data-href=film_url(id)>
        <td><%= film['title'] %></td>
        <td><%= film['release_date'] %></td>
        <td><%= film['director'] %></td>
        <td><%= film['producer'] %></td>
        <td><%= film['episode_id'] %></td>
        <td><%= link_to 'Show', film_url(id) %></td>

      </tr>
    <% end %>
  </tbody>
