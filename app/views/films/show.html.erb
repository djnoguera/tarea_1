<div class='panel panel-default'>
  <div class="panel-heading"><h1 class='text-center'><%= @film['title'] %></h1></div>
  <table class='table table-bordered'>
    <tr>
      <th>Episode:</th>
      <td><%=@film['episode_id']%></td>
    </tr>
    <tr>
      <th>Director:</th>
      <td><%=@film['director']%></td>
    </tr>
    <tr>
      <th>Producer:</th>
      <td><%= @film['producer'] %>kg</td>
    </tr>
    <tr>
      <th>Release Date:</th>
      <td><%=@film['release_date']%></td>
    </tr>
  </table>
  <div class="panel-heading"><h5 class='text-center'>Opening Crawl</h5></div>
  <div class="panel-body">
     <p><%= @film['opening_crawl'] %></p>
   </div>
</div>
<div class='row'>
  <div class='col-md-4'>
    <div class='list-group'>
      <a href='#' class='list-group-item disabled'><h2>Characters</h2></a>
      <% if !@film['characters'].empty? %>
      <% @characters.each do |character| %>
      <% id = character['url'].split('/')[5] %>
      <p><%= character['name'] %> <%= link_to 'Show', character_url(id) %></p>
       
      <%end%>
      <% else %>
      <a href='#' class="list-group-item">No Starships</a>
      <% end %>
    </div>
  </div>
</div>
<div class='row'>
  <div class='col-md-4'>
    <div class='list-group'>
      <a href='#' class='list-group-item disabled'><h2>Starships</h2></a>
      <% if !@film['starships'].empty? %>
      <% @starships.each do |starship| %>
      <p><%= starship['name'] %></p>
      <%end%>
      <% else %>
      <a href='#' class="list-group-item">No Starships</a>
      <% end %>
    </div>
  </div>
</div>

</div> <!--row-->

<center>
  <a href='/films'><button class='btn btn-default'>Back to Films</button></a>
</center>
