<div class ="container-fluid">
  <div class = "row">
    <div class='col-md-4'>
      <div class='list-group list-group-flush'>
        <a href='/characters' class='list-group-item '><h2>Characters</h2></a>
        <% if !@film['characters'].empty? %>
        <% @characters.each do |character| %>
        <% id = character['url'].split('/')[5] %>
        <p><%= character['name'] %> <%= link_to 'Show', character_url(id) %></p>
        <%end%>
        <% else %>
        <a  class="list-group-item">No Starships</a>
        <% end %>
      </div>
    </div>
    <div class='col-md-4'>
      <div class='list-group list-group-flush'>
         <a href='/planets' class='list-group-item'><h2>Planets</h2></a>
          <% if !@film['planets'].empty? %>
          <% @planets.each do |planet| %>
          <% id = planet['url'].split('/')[5] %>
          <p><%= planet['name'] %> <%= link_to 'Show', planet_url(id) %></p>
          <%end%>
          <% else %>
          <a class="list-group-item">No Planets</a>
          <% end %>
      </div>
    </div>
    <div class='col-md-4'>
      <div class='list-group list-group-flush'>
        <a href='/starships' class='list-group-item'><h2>Starships</h2></a>
          <% if !@film['starships'].empty? %>
          <% @starships.each do |starship| %>
          <% id = starship['url'].split('/')[5] %>
          <p><%= starship['name'] %> <%= link_to 'Show', starship_url(id) %></p>
          <%end%>
          <% else %>
          <a  class="list-group-item">No Starships</a>
          <% end %>
      </div>
    </div>
