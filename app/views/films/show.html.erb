    <tr>
      <th>Episode:</th>
      <td><%=@film['episode_id']%></td>
    </tr>
    <tr>
      <th>Director:</th>
      <td><%=@film['director']%></td>
    </tr>
    <tr>
      <th>Producer:</th>
      <td><%= @film['producer'] %>kg</td>
    </tr>
    <tr>
      <th>Release Date:</th>
      <td><%=@film['release_date']%></td>
    </tr>
  </table>
  <div class="panel-heading"><h5 class='text-center'>Opening Crawl</h5></div>
  <div class="panel-body">
     <p><%= @film['opening_crawl'] %></p>
   </div>
